@model Projeto_Aeronautica_MVC.Data.Entities.Airplane

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="services" style="margin-top:60px">

    <h1 class="heading"> Airplane Details</h1>
    <hr />

    <div class="box-container">
        <div class="box">
            <p><b>@Html.DisplayNameFor(model => model.Apparatus)</b> : @Html.DisplayFor(model => model.Apparatus)</p>
            <p><b>@Html.DisplayNameFor(model => model.TotalSeats)</b> : @Html.DisplayFor(model => model.TotalSeats)</p>

            <div>
                @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn">Edit</a>
                }
                <a asp-action="Index" class="btn">Back to List</a>
            </div>
        </div>

        <div style="text-align:right; position:relative">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="height:300px; width:400px; border-radius:15%; overflow:hidden; box-shadow: 0px 30px 40px -25px rgba(0, 0, 0, 1)">
        </div>

    </div>
  </div>