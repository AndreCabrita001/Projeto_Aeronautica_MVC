@model IEnumerable<Projeto_Aeronautica_MVC.Data.Entities.Airplane>

@{ ViewData["Title"] = "Index"; }

<h1>Flight List</h1>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />
<br />
<section class="services" id="services" style="margin-top:60px">


    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Employee"))
    {
    <p>
        <a asp-action="Create" class="btn">Create New</a>
    </p>
    }
</section>
    
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apparatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvaliableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apparatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvaliableSeats)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageFullPath))
                {
                    <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto">
                }
            </td>
            <td>
                @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('#MyTable').DataTable();
            });
    </script>
}

