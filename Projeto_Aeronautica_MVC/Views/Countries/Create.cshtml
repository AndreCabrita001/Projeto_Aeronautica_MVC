@model Projeto_Aeronautica_MVC.Data.Entities.Country

@{
    ViewData["Title"] = "Create";
}

<section class="services" id="services" style="margin-top:60px">

    <h1 class="heading"> Add Country</h1>
    <hr />
</section>

<flash dismissable="true"/>

<section class="form-container">

    <div class="row">

        <div class="col-md-4">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="inputBox">
                    <span>Name</span>
                    <input asp-for="Name" class="form-control" />
                </div>
                <h3><span asp-validation-for="Name" class="text-danger"></span></h3>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn" />
                    <a asp-action="Index" class="btn">Back to List</a>
                </div>
            </form>

        </div>

    </div>

</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

