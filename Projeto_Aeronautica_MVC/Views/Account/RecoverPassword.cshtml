@model Projeto_Aeronautica_MVC.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<h2>Recover Password</h2>

<section class="form-container" style="margin-top:60px">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="inputBox">
                    <span>Email</span>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>

                    <div class="form-group">
                        <input type="submit" value="Recover password" class="btn" style="background-color:#F79F1F; color:white" />
                        <a asp-action="Login" class="btn">Back to login</a>
                    </div>
                </div>
            </form>
            <div class="text-success">
                <h3>
                    @ViewBag.Message
                </h3>
            </div>
        </div>
    </div>
</section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


