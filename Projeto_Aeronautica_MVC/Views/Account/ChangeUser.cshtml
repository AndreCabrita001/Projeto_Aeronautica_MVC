@model Projeto_Aeronautica_MVC.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

<section class="services" id="services" style="margin-top:60px">

<h1 class="heading"> Update User Info</h1>
<hr />
    </section>

<section class="form-container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="inputBox">
                    <span>First Name</span>
                    <input asp-for="FirstName" class="form-control" />

                </div>
                <h3> <span asp-validation-for="FirstName" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Last Name</span>
                    <input asp-for="LastName" class="form-control" />

                </div>
                <h3><span asp-validation-for="LastName" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Image</span>
                    <input asp-for="ImageFile" class="form-control" type="file" />

                </div>
                <h3><span asp-validation-for="ImageFile" class="text-danger"></span></h3>

                <div class="inputBox">
                    <span>Country</span>
                    <select style="font-size:17px" asp-for="CountryId" asp-items="Model.Countries" class="form-control"></select>

                </div>
                <h3><span asp-validation-for="CountryId" class="text-danger"></span></h3>

                <div class="inputBox">
                    <span>City</span>
                    <select style="font-size:17px" asp-for="CityId" asp-items="Model.Cities" class="form-control"></select>
                </div>
                <h3><span asp-validation-for="CityId" class="text-danger"></span></h3>

                <div class="inputBox">
                    <span>Adress</span>
                    <input asp-for="Address" class="form-control" />

                </div>
                <h3><span asp-validation-for="Address" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Phone Number</span>
                    <input asp-for="PhoneNumber" class="form-control" />

                </div>
                <h3><span asp-validation-for="PhoneNumber" class="text-warning"></span></h3>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn" />
                    <a asp-action="ChangePassword" class="btn">Change Password</a>
                </div>

                <div class="text-success"><h3>@ViewBag.UserMessage</h3></div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
	$(document).ready(function () {
		$("#CountryId").change(function () {
			$("#CityId").empty();
			$.ajax({
				url: '@Url.Action("GetCitiesAsync","Account")',
				type: 'POST',
				dataType: 'json',
				data: {countryId:$("#CountryId").val()},
				success: function (cities) {
					debugger;
					$("#CityId").append('<option value="0">(Select a city...)</option>');
					$.each(cities, function (i, city) {
						$("#CityId").append('<option value="'
							+ city.id + '">'
							+ city.name + '</option>');
					});
				},
				error: function (ex) {
					debugger;
					alert('Failed to retrieve cities.' + ex);
				}
			});
			return false;
		})
	});
    </script>
}
