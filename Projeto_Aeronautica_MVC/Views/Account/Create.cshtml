@model Projeto_Aeronautica_MVC.Models.RegisterNewUserViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="services" id="services" style="margin-top:60px">
        <h1 class="heading"> Register New Client</h1>
    <hr />
</section>

<section class="form-container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly"></div>
                <div class="inputBox">
                    <span>First Name</span>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <h3><span asp-validation-for="FirstName" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Last Name</span>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <h3><span asp-validation-for="LastName" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Username</span>
                    <input asp-for="Username" class="form-control" />
                </div>
                <h3><span asp-validation-for="Username" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Image</span>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                </div>
                <h3><span asp-validation-for="ImageFile" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Country</span>
                    <input id="country_selector" asp-for="Country" class="form-control" type="text" />
                </div>
                <h3><span asp-validation-for="Country" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Address</span>
                    <input asp-for="Address" class="form-control" />
                </div>
                <h3><span asp-validation-for="Address" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Phone Number</span>
                    <input asp-for="PhoneNumber" class="form-control" />

                </div>
                <h3><span asp-validation-for="PhoneNumber" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Password</span>
                    <input asp-for="Password" type="password" class="form-control" />

                </div>
                <h3><span asp-validation-for="Password" class="text-warning"></span></h3>

                <div class="inputBox">
                    <span>Confirm Password</span>
                    <input asp-for="Confirm" type="password" class="form-control" />

                </div>
                <h3><span asp-validation-for="Confirm" class="text-warning"></span></h3>

                <div class="form-group">
                    <input type="submit" value="Register New User" class="btn" />
                </div>
            </form>
        </div>
    </div>
</section>

<div class="text-success">
    <h3>
        @ViewBag.Message
    </h3>
</div>

<script>
    $("#country_selector").countrySelect({
        preferredCountries: ['pt']
    });
    $("#country_selector").countrySelect("setCountry", "Portugal");
</script>