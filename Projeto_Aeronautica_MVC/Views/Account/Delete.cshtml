@model Projeto_Aeronautica_MVC.Data.Entities.User
@{
    ViewData["Title"] = "Delete";
}

<section class="services" id="services" style="margin-top:60px">

    <h1 class="heading"> Are you sure you want to delete this user?</h1>
    <hr />
    <div>
        <div class="box-container">
            <div class="box">
                <p><b>@Html.DisplayNameFor(model => model.FullName)</b> : @Html.DisplayFor(model => model.FullName)</p>
                <p><b>@Html.DisplayNameFor(model => model.Address)</b> : @Html.DisplayFor(model => model.Address)</p>
                <p><b>@Html.DisplayNameFor(model => model.Country)</b> : @Html.DisplayFor(model => model.Country)</p>
                <p><b>@Html.DisplayNameFor(model => model.PhoneNumber)</b> : @Html.DisplayFor(model => model.PhoneNumber)</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn" />
                    <a asp-action="Index" class="btn">Back to List</a>
                </form>
            </div>

            <div style="text-align:right; position:relative">
                <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="height:300px; width:400px; border-radius:15%; overflow:hidden; box-shadow: 0px 30px 40px -25px rgba(0, 0, 0, 1)">
            </div>
        </div>
    </div>
</section>