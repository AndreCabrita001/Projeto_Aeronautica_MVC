@model Projeto_Aeronautica_MVC.Data.Entities.Flight

@{ ViewData["Title"] = "Delete"; }

    <section class="services" id="services" style="margin-top:60px">

        <h1 class="heading"> Are you sure you want to delete this flight?</h1>
        <hr />
        <div>
            <div class="box-container">
                <div class="box">
                    <p><b>@Html.DisplayNameFor(model => model.FlightApparatus)</b> : @Html.DisplayFor(model => model.FlightApparatus)</p>
                    <p><b>@Html.DisplayNameFor(model => model.AdultPrice)</b> : @Html.DisplayFor(model => model.AdultPrice)</p>
                    <p><b>@Html.DisplayNameFor(model => model.DepartureDate)</b> : @Html.DisplayFor(model => model.DepartureDate)</p>
                    <p><b>@Html.DisplayNameFor(model => model.ArrivalDate)</b> : @Html.DisplayFor(model => model.ArrivalDate)</p>
                    <p><b>@Html.DisplayNameFor(model => model.IsAvailable)</b> : @Html.DisplayFor(model => model.IsAvailable)</p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn" />
                        <a asp-action="Index" class="btn">Back to List</a>
                    </form>
                </div>

                <div style="text-align:right; position:relative">
                    <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="height:300px; width:400px; border-radius:15%; overflow:hidden; box-shadow: 0px 30px 40px -25px rgba(0, 0, 0, 1)">
                </div>
            </div>
        </div>
    </section>

